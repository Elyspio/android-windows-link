{
	"compilerOptions": {
		"target": "ES2018",
		"outDir": "lib",
		"lib": [
			"ES2020",
			"dom"
		],

		"noImplicitAny": false,
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"exclude": [
		"./node_modules",
		"./app/server/front"
	],
	"include": [
		"./app"
	]
}
